{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "img/*": ["src/assets/img/*"],
      "components/*": ["src/components/*"],
      "modules/*": ["src/modules/*"],
      "screens/*": ["src/screens/*"],
      "styles/*": ["src/styles/*"],
      "hooks/*": ["src/hooks/*"],
      "helpers/*": ["src/helpers/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
